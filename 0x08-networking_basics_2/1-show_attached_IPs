#!/bin/bash

# Get network interface names
interfaces=$(ifconfig -a | grep -oE '^[^[:space:]]+')

# Loop through each interface
for interface in $interfaces; do
    # Get IPv4 addresses for the interface
    ipv4_addresses=$(ifconfig $interface | awk '/inet / {print $2}')

    # Check if IPv4 addresses are available
    if [ ! -z "$ipv4_addresses" ]; then
        echo "IPv4 addresses for interface $interface:"
        echo "$ipv4_addresses"
    fi
done
